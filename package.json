{
  "name": "@hitachivantara/uikit-adoption-ts",
  "version": "1.0.0",
  "description": "Example setup for React and TypeScript with Hitachi Vantara UI Kit",
  "license": "Apache-2.0",
  "private": true,
  "homepage": "https://hqfox.github.io/hackaton2022-repoplant/",
  "author": {
    "name": "Hitachi Vantara UI Kit Team"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lumada-design/hv-uikit-adoption.git"
  },
  "dependencies": {
    "@apollo/client": "^3.5.7",
    "@hitachivantara/uikit-react-core": "^3.67.2",
    "@hitachivantara/uikit-react-icons": "^3.8.12",
    "@hitachivantara/uikit-react-lab": "^3.45.2",
    "@material-ui/core": "^4.12.4",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "axios": "^0.25.0",
    "clsx": "^1.1.1",
    "graphql": "^16.2.0",
    "i18next": "^21.6.7",
    "i18next-browser-languagedetector": "^6.1.2",
    "i18next-http-backend": "^1.3.2",
    "js-cookie": "^3.0.1",
    "jwt-encode": "^1.0.1",
    "plotly.js-basic-dist": "^1.58.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.15.3",
    "react-router-dom": "5.2.0",
    "swr": "^1.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src --color",
    "format": "prettier --write 'src/**/*.{ts,tsx,scss,css,json}'",
    "codegen": "graphql-codegen --config codegen.yml",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.4.0",
    "@graphql-codegen/typescript": "^2.4.2",
    "@graphql-codegen/typescript-operations": "^2.2.2",
    "@graphql-codegen/typescript-react-apollo": "^3.2.4",
    "@types/jest": "^27.4.0",
    "@types/js-cookie": "^3.0.1",
    "@types/jwt-encode": "^1.0.0",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/node": "^17.0.10",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.3",
    "eslint-config-airbnb-typescript-prettier": "^5.0.0",
    "gh-pages": "^4.0.0",
    "prettier": "^2.5.1",
    "react-scripts": "^5.0.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "coverageReporters": [
      "text"
    ]
  }
}
